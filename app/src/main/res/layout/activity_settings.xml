<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.makrandpawar.chatla.SettingsActivity"
    android:background="@color/colorPrimaryDark">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/default_avatar"
        app:civ_border_color="#000000"
        app:civ_border_width="4dp"
        app:civ_shadow="true"
        android:id="@+id/settings_img_dp" />

    <TextView
        android:id="@+id/settings_txt_displayname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="Display Name"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:layout_below="@+id/settings_img_dp"
        android:layout_alignStart="@+id/tableLayout" />

    <TextView
        android:id="@+id/settings_txt_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_txt_displayname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:text="User Status"
        android:textColor="@android:color/white" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:id="@+id/tableLayout">
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/settings_btn_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_change_dp" />
        </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/settings_btn_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings_change_status" />
        </TableRow>
    </TableLayout>

</RelativeLayout>
